<h1>Shelter Details</h1>

<div id="shelterinfo">
  <h2>Name: <%= @shelter.name %></h2>
  <h3>Address: <%= @shelter.address %></h3>
  <h3>City: <%= @shelter.city %></h3>
  <h3>State: <%= @shelter.state %></h3>
  <h3>Zip: <%= @shelter.zip %></h3>
  <h3>Open: <%= @shelter.open %></h3>
  <br>
  <h4><%= link_to "Update Shelter", "/shelters/#{@shelter.id}", :method => :patch %></h4>
  <br>
  <h4><%= link_to "Delete Shelter", "/shelters/#{@shelter.id}", :method => :delete %></h4>
</div>

<div id="shelter_weather">
  <p>Weather Conditions: <%= @weather.temp_f %>&#8457; and <%= @weather.text %></p>
  <%= image_tag "#{@weather.icon}", alt: 'Shelter Weather' %>
</div>