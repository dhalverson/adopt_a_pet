<h1>All Pets</h1>
<ol>
<% @pets.each do |pet| %>
  <li>
    <div id="name"><h2>Name: <%= pet.name %></h2></div>
  </li>
    <%= link_to image_tag(pet.image, style:'width:15%', alt: 'Pet Picture'), pet_path(pet) if pet.image.attached? %>
    <div id="species"><p>Type: <%= pet.species %></p></div>
    <div id="breed"><p>Breed: <%= pet.breed %></p></div>
    <div id="sex"><p>Sex: <%= pet.sex %></p></div>
    <div id="age"><p>Age: <%= pet.age %> years</p></div>
    <div id="description"><p>Description: <%= pet.description %></p></div>
    <div id="adopted"><p>Adopted: <%= pet.adopted %></p></div>
<% end %>
</ol>
